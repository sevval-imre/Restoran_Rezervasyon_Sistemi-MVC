@using SevvalImre_Proje.Models;
@model Kampanya

@{
    ViewBag.Title = "KampanyaEkle";
}

<h2>Kampanya Ekle</h2>

<div class="page-header">
    <h3 class="page-title">Kampanya Ekleme Syafası</h3>
</div>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <form class="forms-sample" action="/Kampanyalar/KampanyaEkle" method="post" role="form">
                @if (Model != null)
                {
                    <input type="hidden" name="KampanyaID" value="@Model.KampanyaID" />
                }

                <div class="form-group">
                    <label for="exampleInputKampanyaAd1">Kampanya Adı</label>
                    @if (Model.KampanyaAd == null)
                    {
                        <input value="" type="text" class="form-control" id="exampleInputKampanya1" placeholder="Kampanya Adı" name="KampanyaAd" />
                    }
                    else
                    {
                        <input value="@Model.KampanyaAd" type="text" class="form-control" id="exampleInputKampanyaAd1" placeholder="Kampanya Adı" name="KampanyaAd" />
                    }
                </div>

                <div class="form-group">
                    <label for="exampleInputKampanyaTarihleri">Kampanya Tarihi</label>
                    @if (Model.KampanyaTarihleri == null)
                    {
                        <input value="" type="date" class="form-control" id="exampleInputKampanyaTarihi1" placeholder="Kampanya Tarihi" name="KampanyaTarihleri" />
                    }
                    else
                    {
                        <input value="@Model.KampanyaTarihleri" type="date" class="form-control" id="exampleInputKampanyaTarihi1" placeholder="Kampanya Tarihi" name="KampanyaTarihleri" />
                    }
                </div>

                <div class="form-group">
                    <label for="exampleInputRestoranlar">Kampanyanın Geçerli Olacağı Restoranı Seçiniz</label>
                    @{
                        var listt = ViewBag.restoran as List<Restoran>;
                        <select class="form-control" name="RestoranID">
                            @if (listt != null)
                            {
                                foreach (Restoran item in listt)
                                {
                                    <option value="@item.RestoranID">@item.RestoranAd</option>
                                }
                            }
                        </select>
                    }
                </div>

                <button type="submit" class="btn btn-primary mr-2"> Kaydet </button>
            </form>
        </div>
    </div>
</div>


